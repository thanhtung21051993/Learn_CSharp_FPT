<Page x:ConnectionId='1'
    x:Class="UO5.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UO5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:ConnectionId='2' Name="LayoutGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='3' Name="ClickMeButton" Content="Click Me" Margin="0,300,0,0" VerticalAlignment="Top" Height="335" Width="812" HorizontalAlignment="Center" FontSize="80"                             FocusVisualPrimaryBrush="#FF9F1919" Foreground="#FFD42020">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="#FF55C233" Offset="0"/>
                        </GradientStopCollection>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>

